extends KinematicBody2D
class_name Enemy2

signal die
signal add_score
var inout_vector = Vector2.ZERO
var speed = 1
var score = 0
var direction = 1
var ah = 1

func _physics_process(_delta):
	global_position.x += -speed * direction

func take_damage(damage):
	$explode.play()
	ouch()
	$AnimationPlayer.play("death")
	ah -= damage
	ah -= 1
	if ah <= 1:
		emit_signal("enemy_died")
		$AnimationPlayer.play("death")

func ouch():
	emit_signal("add_score")
	$AnimationPlayer.play("death")
	$explode.play()
	take_damage(1)

func die():
	ah == 0
	if ah <= 1:
		$Sprite.play("squashed")
		set_modulate(Color(3,1,1,1))

func _on_sides_checker_body_entered(body):
	if body.get_collision_layer() == 1:
		body.take_damage(1)
		body.loadhearts()
		emit_signal("die")
		emit_signal("add_score")
		$Sprite.play("squashed")
		$Enemy2Timer.start()
	if body.is_in_group("Fireball"):
		emit_signal("add_score")
		$Sprite.play("squashed")
		emit_signal("die")

func _on_Sprite_animation_finished(body):
	body.queue_free()
	queue_free()
	$Enemy2Timer.start()

func _on_Enemy2Timer_timeout():
	queue_free()

func _on_AnimationPlayer_animation_finished(death):
	$Enemy2Timer.start()
